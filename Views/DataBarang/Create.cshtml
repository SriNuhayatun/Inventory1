<div class="col-md-6 col-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Tambah Barang</h4>
        </div>
        <div class="card-content">
            <div class="card-body">
                <form class="form form-horizontal">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-4">
                                <label asp-for="KodeBarang">Kode Barang</label>
                            </div>
                            <div class="col-md-8 form-group">
                                <input asp-for="KodeBarang" id="first-name" class="form-control"
                                       placeholder="kode Barang">
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Kategori">Kategori</label>
                            </div>
                            <div class="col-md-8 form-group">
                                <input asp-for="Kategori" id="email-id" class="form-control"
                                       placeholder="Kategori">
                            </div>
                            <div class="col-md-4">
                                <label asp-for="NamaBarang">Nama Barang</label>
                            </div>
                            <div class="col-md-8 form-group">
                                <input asp-for="NamaBarang" id="contact-info" class="form-control" 
                                       placeholder="Nama Barang">
                            </div>
                            <div class="col-md-4">
                                <label asp-for="status">Status</label>
                            </div>
                            <div class="col-md-8 form-group">
                                <input asp-for="status" id="password" class="form-control" 
                                       placeholder="Status">
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Stok">Stok</label>
                            </div>
                            <div class="col-md-8 form-group">
                                <input asp-for="Stok" id="password" class="form-control"
                                       placeholder="Stok">
                            </div>
                            <div class="col-sm-12 d-flex justify-content-end">
                                <button type="submit" class="btn btn-primary me-1 mb-1">Create</button>
                                <button type="reset"
                                        class="btn btn-light-secondary me-1 mb-1">
                                    Reset
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
