@model BarangKeluarForm;

@{
    Layout = "_AdminLayout";
}


<div class="col-md-6 col-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Tambah Barang Keluar</h4>
        </div>
        <div class="card-content">
            <div class="card-body">
                <form asp-controller="BarangKeluar" asp-action="CreateKeluar" class="form form-horizontal">
                    <div class="form-body">
                        <div class="row">
                            @*<div class="col-md-4">
                                <label asp-for="Id_Keluar">ID Keluar</label>
                            </div>
                            <div class="col-md-8 form-group">
                                <input asp-for="Id_Keluar" class="form-control"
